{% extends '@TimVhosting/layout.html.twig' %}

{% block title %}
    {{ 'contact.title.label'|trans({}, 'TimVhostingBundle') }}
{% endblock %}

{% block body %}
    <div class="container">

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <p class="bg-success">
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="flash-notice">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                </p>
                <p class="bg-error">
                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <div class="flash-error">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                </p>
            </div>
        </div>

        <div class="col-sm-offset-2 col-sm-10">
            {# <div class="page-header"> #}
            <div>
                <h1>{{ 'contact.header.label'|trans({}, 'TimVhostingBundle') }}</h1>
            </div>
        </div>

        {{ form_start(form, {'class': 'form-horizontal', 'attr': {'class': 'form-horizontal'} }) }}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <h4>{{ 'contact.message.label'|trans({}, 'TimVhostingBundle') }}</h4>
            </div>
        </div>
        <p class="text-danger">
            {{ form_errors(form) }}
        </p>
        <div class="form-group">
            {{ form_label(form.name, form.name, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-6">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.email, form.email, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-6">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.message, form.message, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-6">
                {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">{{ 'contact.submit.button.label'|trans({}, 'TimVhostingBundle') }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}