{% extends '@TimVhosting/layout.html.twig' %}
{% form_theme form '@TimVhosting/Form/video_suggest_form_theme.html.twig' %}

{% block title %}
    {{ 'contact.title.label'|trans({}, 'TimVhostingBundle') }}
{% endblock %}

{% block body %}
    <div class="container">

        <h1 class="header-page">{{ 'contact.header.label'|trans({}, 'TimVhostingBundle') }}</h1>

        <div class="form-group">
            <div class="col-sm-8">
                <div class="flash-notice">
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <p class="bg-success" style="padding: 15px;">
                            {{ flashMessage }}
                        </p>
                    {% endfor %}
                </div>

                <div class="flash-error">
                    {% for flashMessage in app.session.flashbag.get('error') %}
                         <p class="bg-error" style="padding: 15px;">
                            {{ flashMessage }}
                        </p>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-6">
                    <h4>{{ 'contact.message.label'|trans({}, 'TimVhostingBundle') }}</h4>
                </div>
            </div>
        </div>

        {{ form(form, {'class': 'form-horizontal', 'attr': {'class': 'form-horizontal'} }) }}

    </div>
{% endblock %}