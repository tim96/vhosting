<!DOCTYPE html>
<!--[if lt IE 7]>
<html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>
<html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>
<html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html {% block html_attributes %}class="no-js"{% endblock %}>
<head>
    {% block meta_tags %}
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="UTF-8">
        <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    {% endblock %}

    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/footer.css">
        <link rel="stylesheet" href="/css/album.css">
    {% endblock %}

    <title>{% block title %}{{ 'main_page.title'|trans({}, 'TimVhostingBundle') }}{% endblock %}</title>

    {% block analytics %}
        {% include '@TimVhosting/analytics.html.twig' %}
    {% endblock %}
</head>
<body class="bg-light">

{% block header %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="{{ path('Home') }}">{{ 'main_page.logo_name'|trans({}, 'TimVhostingBundle') }}</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarsExample07">
                {% block header_additional_navbar_before %}
                {% endblock header_additional_navbar_before %}

                {% block header_navbar %}
                    <ul class="navbar-nav">
                        {% set currentRoute = app.request.attributes.get('_route') %}
                        <li class="nav-item {% if currentRoute == ('Home') %}active{% endif %}"><a class="nav-link" href="{{ path('Home') }}">{{ 'header.home'|trans({}, 'TimVhostingBundle') }}</a></li>
                        <li class="nav-item {% if currentRoute == ('Contribute') %}active{% endif %}"><a class="nav-link" href="{{ path('Contribute') }}">{{ 'header.contribute'|trans({}, 'TimVhostingBundle') }}</a></li>
                        <li class="nav-item {% if currentRoute == ('About') %}active{% endif %}"><a class="nav-link" href="{{ path('About') }}">{{ 'header.about'|trans({}, 'TimVhostingBundle') }}</a></li>
                        <li class="nav-item {% if currentRoute == ('Contact') %}active{% endif %}"><a class="nav-link" href="{{ path('Contact') }}">{{ 'header.contact'|trans({}, 'TimVhostingBundle') }}</a></li>
                        {#<li class="nav-item dropdown">#}
                            {#<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ 'header.language'|trans({}, 'TimVhostingBundle') }} <span class="caret"></span></a>#}
                            {#<ul class="dropdown-menu">#}
                                {#<li><a class="dropdown-item" href="{{ path('ChangeLanguage', { 'name' : 'en'}) }}">En (English)</a></li>#}
                                {#<li><a class="dropdown-item" href="{{ path('ChangeLanguage', { 'name' : 'fr'}) }}">Fr (Français)</a></li>#}
                                {#<li><a class="dropdown-item" href="{{ path('ChangeLanguage', { 'name' : 'ru'}) }}">Ru (Русский)</a></li>#}
                            {#</ul>#}
                        {#</li>#}
                    </ul>
                    <form class="form-inline my-2 my-md-0">
                        <input class="form-control" type="text" placeholder="{{ 'header.search'|trans({}, 'TimVhostingBundle') }}..." aria-label="Search" name="search" >
                    </form>
                {% endblock header_navbar %}

                {% block header_additional_navbar_after %}
                {% endblock header_additional_navbar_after %}
            </div>
        </div>
    </nav>
{% endblock %}

{% block body %}
{% endblock body %}

{% block footer %}
    <footer class="footer">
        <div class="container">
            <p class="float-right back-to-top">
                <a href="#">{{ 'footer.back_to_top'|trans({}, 'TimVhostingBundle') }}</a>
            </p>
            {% block footer_container %}
                <p class="pull-center copyright">
                    <a href="#">
                        {{ 'footer.copyright'|trans({}, 'TimVhostingBundle') }}
                    </a>
                </p>
            {% endblock footer_container %}
        </div>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="/js/jquery.min.js"><\/script>')</script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" crossorigin="anonymous"></script>

    <script src="/js/holder.min.js"></script>
    <script src="/js/retina.min.js"></script>
{% endblock %}

</body>
</html>
